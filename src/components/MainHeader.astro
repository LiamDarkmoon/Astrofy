---
import { allPlaylists } from '@/lib/data';
import HeaderButtons from "./HeaderButtons";
import HeaderNavigation from "./HeaderNavigation";

const { id } = Astro.params
const playlist = allPlaylists.find(playlist => playlist.id === id);
---

<header style={ id ? { backgroundColor: playlist?.color.accent} : null } 
    class="sticky z-30 top-0 h-[64px] flex w-full items-center justify-between gap-2  px-5 py-4 bg-zinc-500">
    <HeaderNavigation id={ id } client:load/>
    <HeaderButtons client:load/>
</header>

<style>
    @keyframes ajust {
        to {
            background-color: darkgreen;
            filter: blur(10px)
        }
    }
    
	header {
        animation-name: ajust;
        animation-timeline: scroll();
        animation-range: 0vh 100px;
        animation-timing-function: linear;
	}
</style>

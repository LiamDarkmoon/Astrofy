---
import type { Song } from "@/lib/data"

interface Props {
  songs: Song[]
}

const { songs } = Astro.props
---

<table class="table-auto font-light text-sm text-left min-w-full divide-y divide-gray-200/20">
    <thead class="font-light">
        <tr class="opacity-70 text-base">
            <th class="px-4 py-3 font-light w-5">#</th>
            <th class="px-4 py-3 font-light">Titulo</th>
            <th class="px-4 py-3 font-light">Album</th>
            <th class="px-4 py-3 font-light truncate">Fecha en la que se agrego</th>
            <th class="px-4 py-3 font-light">Duracion</th>
        </tr>
    </thead>

    <tbody>
        <tr class="h-[16px]"></tr>
        { songs.map((song, index) => (
            <tr class="hover:bg-zinc-100/10 mt-4 transition duration-300">
                <td class="px-4 py-2 opacity-70 rounded-tl-[5px] rounded-bl-[5px] w-5">{ index + 1 }</td>
                <td class="flex gap-2 px-4 py-2">
                    <picture class="h-10 w-10">
                        <img
                            src={song.image}
                            alt={`cover of ${song.title}`}
                            class="object-cover w-full h-full rounded-[4px]"
                        />
                    </picture>
                    <div class="flex flex-col">
                        <h3 class="font-semibold text-base">{ song.title }</h3>
                        <span class="opacity-70">{ song.artists.join(", ") }</span>
                    </div>
                </td>
                <td class="px-2 py-2 opacity-70">{ song.album }</td>
                <td class="px-2 py-2 opacity-70"></td>
                <td class="px-2 py-2 opacity-70 rounded-tr-[5px] rounded-br-[5px]">{ song.duration }</td>
            </tr>
        )) }
    </tbody>
</table>